@model MiAplicacionWeb.Models.Player
@{
    ViewData["Title"] = "Registrar Jugador";
}
<h1>Registrar Nuevo Jugador</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" placeholder="Nombre del jugador" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Age" class="control-label">Edad</label>
                <input asp-for="Age" class="form-control" placeholder="Edad del jugador" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Position" class="control-label">Posición</label>
                <input asp-for="Position" class="form-control" placeholder="Posición del jugador" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Equipo" class="control-label">Equipo</label>
                <input asp-for="Equipo" class="form-control" placeholder="Equipo del jugador" />
                <span asp-validation-for="Equipo" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Registrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
